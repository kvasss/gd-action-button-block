{
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "parentSpacing": true,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "semi": true,
        "arrowParents": "always",
        "no-console": false
      }
    ],
    "@wordpress/i18n-text-domain": [
      "error",
      {
        "allowedTextDomain": [
          "gd-action-button"
        ]
      }
    ]
  }
}
